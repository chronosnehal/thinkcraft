# Agentic System - Environment Variables
# Copy this file to .env (or root .env) and fill in your API keys

# LLM Provider Configuration
# Set LLM_PROVIDER to one of: openai, anthropic, gemini, claude, azure
LLM_PROVIDER=openai

# OpenAI Configuration (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic/Claude Configuration (required if LLM_PROVIDER=anthropic or claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini Configuration (required if LLM_PROVIDER=gemini or google)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Azure OpenAI Configuration (required if LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2023-05-15

# Application Configuration
LOG_LEVEL=INFO
MAX_RETRIES=3
MAX_STEPS=10
DEFAULT_TEMPERATURE=0.7

