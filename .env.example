# ThinkCraft Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# LLM Provider API Keys
# At least one provider is required for GenAI and Agentic problems
# ============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================================================
# Optional: Default Configuration
# ============================================================================

# Default LLM provider (openai, azure, gemini, claude, openrouter)
DEFAULT_LLM_PROVIDER=openai

# Default model per provider
DEFAULT_OPENAI_MODEL=gpt-4
DEFAULT_AZURE_MODEL=gpt-4
DEFAULT_GEMINI_MODEL=gemini-pro
DEFAULT_CLAUDE_MODEL=claude-3-opus-20240229
DEFAULT_OPENROUTER_MODEL=openai/gpt-4

# Default temperature
DEFAULT_TEMPERATURE=0.7

# ============================================================================
# Optional: Application Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# FastAPI settings for agentic systems
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure
# 3. Use different keys for development and production
# 4. Rotate keys regularly
# 5. Monitor API usage and costs
